<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema">
	<datasource 
		jndi-name="${data.source.jndi.name}"
		enabled="true" 
		use-java-context="true" 
		pool-name="actorServerDataSource"
	>
		<connection-url>${data.source.url}</connection-url>
		<driver>${data.source.driver.name}</driver>
		
		<security>
			<user-name>${data.source.user}</user-name>
			<password>${data.source.password}</password>
		</security>
	</datasource>
	
</datasources>
