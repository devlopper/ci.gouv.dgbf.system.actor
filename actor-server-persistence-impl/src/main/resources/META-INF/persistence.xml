<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="actorPersistenceUnit" transaction-type="JTA">
		<jta-data-source>${data.source.jndi.name}</jta-data-source>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.person.Person</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountRequest</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountRequestPerson</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountRequestRole</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountRequestService</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>

	</persistence-unit>
</persistence>