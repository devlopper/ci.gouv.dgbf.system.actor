<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="persistenceUnit">
		<jta-data-source>java:global/actor/server/dataSource</jta-data-source>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.person.Person</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.Role</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountsRequest</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountsRequestPerson</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountsRequestRole</class>
		<class>ci.gouv.dgbf.system.actor.server.persistence.entities.user.account.request.UserAccountsRequestService</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>

	</persistence-unit>
</persistence>